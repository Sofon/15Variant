unit Unit1;

interface

uses
  Windows, Messages, SysUtils, Variants, Classes, Graphics, Controls, Forms,
  Dialogs, StdCtrls, unit2;

type
  TForm1 = class(TForm)
    Edit1: TEdit;
    Button1: TButton;
    Button2: TButton;
    Edit2: TEdit;
    Button3: TButton;
    RadioButton1: TRadioButton;
    RadioButton2: TRadioButton;
    RadioButton3: TRadioButton;
    Button4: TButton;
    Button5: TButton;
    procedure Edit1Click(Sender: TObject);
    procedure Edit1Exit(Sender: TObject);
    procedure Button2Click(Sender: TObject);
    procedure Button1Click(Sender: TObject);
    procedure Button3Click(Sender: TObject);
    procedure Button4Click(Sender: TObject);
    procedure Button5Click(Sender: TObject);
  private
    { Private declarations }
  public
    { Public declarations }
  end;

var
  Form1: TForm1;

implementation

{$R *.dfm}
var st,st1,st2:t;
const lat:set of char=['a'..'z','A'..'Z'];

procedure TForm1.Button1Click(Sender: TObject);
var s:string;i:byte;
begin
clear(st1);clear(st2);
  s:=edit1.Text;
  for i:=1 to length(s) do
     push(st,s[i]);
end;

procedure TForm1.Button2Click(Sender: TObject);
begin
clear(st);
clear(st1);clear(st2);
end;

procedure TForm1.Button3Click(Sender: TObject);
var temp,stack:t;ch:char;s:string;
begin
s:='';
if radiobutton1.Checked then stack:=st
  else if radiobutton2.checked then stack:=st1
       else stack:=st2;
temp:=nil;
if stack<>nil then
  begin
  repeat
    pop(stack,ch);
    push(temp,ch);
    s:=s+ch;
  until stack=nil;
  edit2.Text:=s;
 //обратно
   repeat
    pop(temp,ch);
    push(stack,ch);
  until temp=nil;
  //-----
  end
  else edit2.Text:='пустой';
end;

procedure TForm1.Button4Click(Sender: TObject);
var temp:t;ch:char;
begin
temp:=nil;
clear(st1);clear(st2);
while st<>nil do
   begin
   pop(st,ch);
   push(temp,ch);
     if ch in lat then begin push(st1,ch);push(st1,ch);end
     else push(st2,ch);
   end;
   //обратно
   while temp<>nil do
    begin
    pop(temp,ch);
    push(st,ch);
    end;
  //-----

end;

procedure TForm1.Button5Click(Sender: TObject);
var plat,pother,next:t;ch:char;
begin
st1:=nil;st2:=nil;plat:=nil;pother:=nil;
  while st<>nil do
    begin
    ch:=st^.data;
    next:=st^.next;
       if ch in lat
       then
          begin
             if st1=nil then begin st1:=st;st1^.next:=nil;end;
             if plat<>nil then begin st1:=st;st1^.next:=plat;end;
              plat:=st1;
          end
       else
           begin
             if st2=nil then begin st2:=st;st2^.next:=nil;end;
             if pother<>nil then begin st2:=st;st2^.next:=pother;end;
              pother:=st2;
          end;
       st:=next;
    end;
end;

procedure TForm1.Edit1Click(Sender: TObject);
begin
edit1.Text:='';
end;

procedure TForm1.Edit1Exit(Sender: TObject);
begin
if edit1.Text='' then edit1.Text:='ну введи';
end;

end.
